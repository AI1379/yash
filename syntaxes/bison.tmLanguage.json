{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Bison",
	"patterns": [
		{
			"include": "#declarations"
		},
		{
			"include": "#rules"
		},
		{
			"include": "#epilogue"
		}
	],
	"repository": {
		"declarations": {
			"name": "entity.declarations.bison",
			"patterns": [
				{
					"include": "#prologue"
				},
				{
					"include": "#comment"
				},
				{
					"include": "#comments"
				},
				{
					"include": "#result-type"
				},
				{
					"include": "#keywords"
				},
				{
					"include": "#keywords-block"
				},
				{
					"include": "#define"
				}
			]
		},
		"rules": {
			"name": "entity.rules.bison",
			"begin": "%%",
			"end": "%%",
			"beginCaptures": {
				"0": {
					"name": "markup.bold.bison"
				}
			},
			"endCaptures": {
				"0": {
					"name": "markup.bold.bison"
				}
			},
			"patterns": [
				{
					"include": "#results"
				},
				{
					"include": "#comments"
				},
				{
					"include": "#character"
				},
				{
					"include": "#variables"
				},
				{
					"name": "keyword.operator.bison",
					"match": "[\\|:;]"
				},
				{
					"name": "keyword.other.bison",
					"match": "%(empty|prec)"
				},
				{
					"name": "entity.action.bison",
					"begin": "{",
					"end": "}",
					"beginCaptures": {
						"0": {
							"name": "punctuation.paren.open"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.paren.close"
						}
					},
					"patterns": [
						{
							"include": "#embedded"
						}
					]
				}
			]
		},
		"epilogue": {
			"name": "entity.epilogue.bison",
			"patterns": [
				{
					"include": "#embedded"
				}
			]
		},
		"keywords": {
			"begin": "^%(option|token|left|right|defines|output|precedence|nterm)\\b",
			"end": "$",
			"beginCaptures": {
				"0": {
					"name": "keyword.other.bison"
				}
			},
			"patterns": [
				{
					"include": "#number"
				},
				{
					"include": "#variables"
				},
				{
					"include": "#types"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#character"
				}
			]
		},
		"result-type": {
			"begin": "^%type\\b",
			"end": "$",
			"beginCaptures": {
				"0": {
					"name": "keyword.other.bison"
				}
			},
			"patterns": [
				{
					"include": "#types"
				},
				{
					"name": "support.class.bison",
					"match": "[a-zA-Z0-9_]+"
				}
			]
		},
		"define": {
			"begin": "^%(define)",
			"end": "$",
			"beginCaptures": {
				"0": {
					"name": "keyword.other.bison"
				}
			},
			"patterns": [
				{
					"name": "variable.parameter.bison",
					"match": "[a-zA-Z_\\.]+"
				},
				{
					"begin": "{",
					"end": "}",
					"patterns": [
						{
							"include": "#embedded"
						}
					]
				}
			]
		},
		"keywords-block": {
			"begin": "^%(destructor|union|code requires|code provides|code top|code|printer|parse-param|lex-param)",
			"end": "$",
			"beginCaptures": {
				"0": {
					"name": "keyword.other.bison"
				}
			},
			"patterns": [
				{
					"name": "entity.action.bison",
					"begin": "{",
					"end": "}",
					"patterns": [
						{
							"include": "#embedded"
						}
					]
				},
				{
					"include": "#variables"
				}
			]
		},
		"prologue": {
			"name": "entity.prologue.bison",
			"begin": "%(top)?{",
			"end": "%}",
			"beginCaptures": {
				"0": {
					"name": "markup.inserted.bison"
				},
				"1": {
					"name": "variable.parameter.bison"
				}
			},
			"endCaptures": {
				"0": {
					"name": "markup.inserted.bison"
				}
			},
			"patterns": [
				{
					"include": "#embedded"
				}
			]
		},
		"number": {
			"patterns": [
				{
					"name": "constant.numeric.bison",
					"match": "[0-9]+((x)[0-9]+)?"
				}
			]
		},
		"types": {
			"match": "<([a-zA-Z_*\b]+)>",
			"captures": {
				"1": {
					"name": "constant.numeric.bison"
				}
			}
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.parameter.bison",
					"match": "[a-zA-Z_]+"
				}
			]
		},
		"results": {
			"patterns": [
				{
					"name": "support.class.bison",
					"match": "^[a-zA-Z_]+"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.bison",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.bison",
					"match": "\\\\."
				}
			]
		},
		"character": {
			"patterns": [
				{
					"name": "string.quoted.single.bison",
					"match": "'(\\\\)?.'"
				},
				{
					"name": "string.quoted.single.bison",
					"match": "\"(\\\\)?.\""
				}
			]
		},
		"comments": {
			"name": "comment.block.bison",
			"begin": "/\\*",
			"end": "\\*/"
		},
		"comment": {
			"name": "comment.single.bison",
			"begin": "//",
			"end": "$"
		},
		"embedded": {
			"patterns": [
				{
					"include": "source.cpp"
				},
				{
					"include": "source.c"
				}
			]
		}
	},
	"scopeName": "source.y"
}