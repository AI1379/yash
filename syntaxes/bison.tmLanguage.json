{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Bison",
	"patterns": [
		{
			"include": "#declarations"
		},
		{
			"include": "#rules"
		},
		{
			"include": "#epilogue"
		}
	],
	"repository": {
		"declarations": {
			"patterns": [
				{
					"include": "#prologue"
				},
				{
					"include": "#comment"
				},
				{
					"include": "#comments"
				},
				{
					"include": "#keywords"
				},
				{
					"include": "#keywords-block"
				}
			]
		},
		"rules": {
			"begin": "%%",
			"end": "%%",
			"beginCaptures": {
				"0": {
					"name": "markup.bold.bison"
				}
			},
			"endCaptures": {
				"0": {
					"name": "markup.bold.bison"
				}
			},
			"patterns": [
				{
					"include": "#results"
				},
				{
					"include": "#comments"
				},
				{
					"include": "#character"
				},
				{
					"name": "keyword.operator",
					"match": "[\\|:;]"
				},
				{
					"name": "keyword.other.bison",
					"match": "%(empty|prec)"
				},
				{
					"begin": "{",
					"end": "}",
					"beginCaptures": {
						"0": {
							"name": "punctuation.paren.open"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.paren.close"
						}
					},
					"patterns": [
						{
							"include": "#embedded"
						}
					]
				},
				{
					"name": "variable.parameter",
					"match": "."
				}
			]
		},
		"keywords": {
			"begin": "^%(option|type|token|left|right|defines|define|output)\\b",
			"end": "$",
			"beginCaptures": {
				"0": {
					"name": "keyword.other.bison"
				}
			},
			"patterns": [
				{
					"include": "#character"
				},
				{
					"include": "#types"
				},
				{
					"include": "#strings"
				},
				{
					"name": "variable.parameter",
					"match": "."
				}
			]
		},
		"keywords-block": {
			"begin": "^%(destructor|union|code requires|code provides|code top|code|printer)",
			"end": "}",
			"beginCaptures": {
				"0": {
					"name": "keyword.other.bison"
				}
			},
			"patterns": [
				{
					"begin": "{",
					"end": "(?=})",
					"patterns": [
						{
							"include": "#embedded"
						}
					]
				}
			]
		},
		"prologue": {
			"name": "entity.bison",
			"begin": "%(top)?{",
			"end": "%}",
			"beginCaptures": {
				"0": {
					"name": "markup.inserted.bison"
				},
				"1": {
					"name": "variable.parameter.bison"
				}
			},
			"endCaptures": {
				"0": {
					"name": "markup.inserted.bison"
				}
			},
			"patterns": [
				{
					"include": "#embedded"
				}
			]
		},
		"types": {
			"begin": "<",
			"end": ">",
			"patterns": [
				{
					"name": "support.type.bison",
					"match": "[a-zA-Z_*\b]+"
				}
			]
		},
		"results": {
			"patterns": [
				{
					"name": "support.class.bison",
					"match": "^[a-zA-Z_]+"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.bison",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.bison",
					"match": "\\\\."
				}
			]
		},
		"character": {
			"patterns": [
				{
					"name": "string.quoted.single.bison",
					"match": "'.'"
				},
				{
					"name": "string.quoted.single.bison",
					"match": "\"(\\\\)?.\""
				}
			]
		},
		"comments": {
			"name": "comment.block.bison",
			"begin": "/\\*",
			"end": "\\*/"
		},
		"comment": {
			"name": "comment.single.bison",
			"begin": "//",
			"end": "$"
		},
		"epilogue": {
			"patterns": [
				{
					"include": "#embedded"
				}
			]
		},
		"embedded": {
			"patterns": [
				{
					"include": "source.cpp"
				},
				{
					"include": "source.c"
				}
			]
		}
	},
	"scopeName": "source.y"
}