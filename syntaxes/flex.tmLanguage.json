{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Flex",
	"patterns": [
		{
			"include": "#strings"
		},
		{
			"include": "#symbols"
		},
		{
			"include": "#definition"
		},
		{
			"include": "#rules"
		},
		{
			"include": "#subroutine"
		}
	],
	"repository": {
		"definition": {
			"patterns": [
				{
					"include": "#block"
				},
				{
					"include": "#directives"
				},
				{
					"include": "#states"
				},
				{
					"include": "#defines"
				}
			]
		},
		"rules": {
			"patterns": [
				{
					"include": "#block"
				},
				{
					"begin": "%%",
					"end": "%%",
					"beginCaptures": {
						"0": {
							"name": "markup.bold.flex"
						}
					},
					"endCaptures": {
						"0": {
							"name": "markup.bold.flex"
						}
					},
					"patterns": [
						{
							"include": "#strings"
						},
						{
							"include": "#predefined"
						},
						{
							"include": "#use-define"
						},
						{
							"include": "#symbols"
						},
						{
							"patterns": [
								{
									"name": "constant.flex",
									"match": "<[a-zA-Z_]+>"
								}
							]
						},
						{
							"patterns": [
								{
									"name": "string.unquoted",
									"match": "^.*(?={)"
								}
							]
						},
						{
							"begin": "{",
							"end": "}",
							"patterns": [
								{
									"include": "source.cpp"
								},
								{
									"include": "source.c"
								}
							]
						},
						{
							"name": "entity.name.function.flex",
							"match": "."
						}
					]
				}
			]
		},
		"subroutine": {
			"patterns": [
				{
					"include": "source.c"
				}
			]
		},
		"block": {
			"name": "entity.flex",
			"begin": "%(top)?{",
			"end": "%}",
			"beginCaptures": {
				"0": {
					"name": "markup.inserted.flex"
				},
				"1": {
					"name": "variable.parameter.flex"
				}
			},
			"endCaptures": {
				"0": {
					"name": "markup.inserted.flex"
				}
			},
			"patterns": [
				{
					"include": "source.c"
				}
			]
		},
		"directives": {
			"begin": "^%(array|pointer|option)",
			"end": "$",
			"beginCaptures": {
				"0": {
					"name": "keyword.other.flex"
				}
			},
			"patterns": [
				{
					"include": "#strings"
				},
				{
					"name": "variable.parameter",
					"match": "[a-zA-Z0-9-]+"
				}
			]
		},
		"states": {
			"begin": "^%[sx]",
			"end": "$",
			"beginCaptures": {
				"0": {
					"name": "keyword.other.flex"
				}
			},
			"patterns": [
				{
					"name": "support.constant.flex",
					"match": "."
				}
			]
		},
		"defines": {
			"begin": "^[a-zA-Z_]+",
			"end": "$",
			"beginCaptures": {
				"0": {
					"name": "support.class.flex"
				}
			},
			"patterns": [
				{
					"include": "#use-define"
				},
				{
					"include": "#symbols"
				},
				{
					"name": "entity.name.function.flex",
					"match": "."
				}
			]
		},
		"use-define": {
			"match": "{([a-zA-Z_]+)}",
			"captures": {
				"0": {
					"name": "entity.name.function"
				},
				"1": {
					"name": "support.class.flex"
				}
			}
		},
		"strings": {
			"name": "string.quoted.double.flex",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.flex",
					"match": "\\\\."
				}
			]
		},
		"predefined": {
			"name": "keyword.flex",
			"match": "(<<EOF>>)"
		},
		"symbols": {
			"name": "keyword.flex",
			"match": "[\\|;]"
		}
	},
	"scopeName": "source.l"
}