{
    "name": "flex-bison-lang",
    "displayName": "Flex & Bison Lang",
    "description": "Syntax highlighting for flex and bison",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.44.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:bison",
        "onLanguage:flex"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "flex",
                "aliases": [
                    "Flex",
                    "flex"
                ],
                "extensions": [
                    ".fl",
                    ".l"
                ],
                "configuration": "./flex-configuration.json"
            },
            {
                "id": "bison",
                "aliases": [
                    "Bison",
                    "bison"
                ],
                "extensions": [
                    ".y",
                    ".yacc",
                    ".ypp"
                ],
                "configuration": "./bison-configuration.json"
            }
        ],
        "grammars": [
            {
                "path": "./syntaxes/dollars.injection.json",
                "scopeName": "dollars.injection",
                "injectTo": [
                    "source.y"
                ]
            },
            {
                "language": "flex",
                "scopeName": "source.l",
                "path": "./syntaxes/flex.tmLanguage.json"
            },
            {
                "language": "bison",
                "scopeName": "source.y",
                "path": "./syntaxes/bison.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "tslint -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.44.0",
        "tslint": "^5.19.0",
        "typescript": "^3.8.3"
    }
}